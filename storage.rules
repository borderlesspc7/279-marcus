rules_version = '2';

// Regras de segurança para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para documentos de clientes
    // Permite que usuários autenticados façam upload e leiam documentos de clientes
    match /documents/{clientId}/{fileName} {
      // Permite leitura e escrita para usuários autenticados
      allow read, write: if request.auth != null;
    }
    
    // Regra padrão: nega acesso a todos os outros arquivos
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

