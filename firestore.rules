rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Permite que usuários autenticados leiam dados de qualquer usuário (necessário para buscar nutricionistas/admins)
      allow read: if request.auth != null;
      
      // Permite que usuários autenticados escrevam apenas seus próprios dados
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para outras coleções (ajuste conforme necessário)
    match /clients/{clientId} {
      // Permite que usuários autenticados leiam e escrevam clientes
      allow read, write: if request.auth != null;
    }
    
    match /appointments/{appointmentId} {
      // Permite que usuários autenticados leiam e escrevam agendamentos
      // Para queries (list), permite se o usuário está autenticado
      // Para documentos individuais, permite leitura e escrita se autenticado
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /diets/{dietId} {
      // Permite que usuários autenticados leiam e escrevam dietas
      allow read, write: if request.auth != null;
    }
    
    match /foods/{foodId} {
      // Permite que usuários autenticados leiam alimentos (pode ser apenas leitura)
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /clientNotes/{noteId} {
      // Permite que usuários autenticados leiam e escrevam notas de clientes
      allow read, write: if request.auth != null;
    }
    
    match /clientDocuments/{documentId} {
      // Permite que usuários autenticados leiam e escrevam documentos de clientes
      allow read, write: if request.auth != null;
    }
    
    match /financialTransactions/{transactionId} {
      // Permite que nutricionistas autenticados leiam e escrevam apenas suas próprias transações
      // Verifica se o nutritionistId da transação corresponde ao usuário autenticado
      allow read: if request.auth != null && 
                   (resource == null || resource.data.nutritionistId == request.auth.uid);
      allow create: if request.auth != null && 
                     request.resource.data.nutritionistId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.nutritionistId == request.auth.uid;
    }
    
    // Regra padrão: nega acesso a todas as outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

