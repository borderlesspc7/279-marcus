rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de usuários
    match /users/{userId} {
      // Permite que usuários autenticados leiam dados de qualquer usuário (necessário para buscar nutricionistas/admins)
      allow read: if request.auth != null;
      
      // Permite que usuários autenticados escrevam apenas seus próprios dados
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para outras coleções (ajuste conforme necessário)
    match /clients/{clientId} {
      // Permite que usuários autenticados leiam e escrevam clientes
      allow read, write: if request.auth != null;
    }
    
    match /appointments/{appointmentId} {
      // Permite que usuários autenticados leiam e escrevam agendamentos
      // Para queries (list), permite se o usuário está autenticado
      // Para documentos individuais, permite leitura e escrita se autenticado
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /diets/{dietId} {
      // Permite que usuários autenticados leiam e escrevam dietas
      allow read, write: if request.auth != null;
    }
    
    match /foods/{foodId} {
      // Permite que usuários autenticados leiam alimentos (pode ser apenas leitura)
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /clientNotes/{noteId} {
      // Permite que usuários autenticados leiam e escrevam notas de clientes
      allow read, write: if request.auth != null;
    }
    
    match /clientDocuments/{documentId} {
      // Permite que usuários autenticados leiam e escrevam documentos de clientes
      allow read, write: if request.auth != null;
    }
    
    match /financialTransactions/{transactionId} {
      // Permite que nutricionistas autenticados leiam e escrevam apenas suas próprias transações
      // Verifica se o nutritionistId da transação corresponde ao usuário autenticado
      allow read: if request.auth != null && 
                   (resource == null || resource.data.nutritionistId == request.auth.uid);
      allow create: if request.auth != null && 
                     request.resource.data.nutritionistId == request.auth.uid;
      allow update, delete: if request.auth != null && 
                               resource.data.nutritionistId == request.auth.uid;
    }
    
    match /dietSubstitutions/{substitutionId} {
      // Permite criação de solicitações de substituição
      // Como clientes usam instância separada de autenticação (clientAuth),
      // permitimos criação se os dados obrigatórios estão presentes
      // A validação do clientId será feita no código da aplicação
      allow create: if request.resource.data.clientId != null &&
                     request.resource.data.nutritionistId != null &&
                     request.resource.data.status == "pending" &&
                     request.resource.data.dietId != null &&
                     request.resource.data.mealName != null &&
                     request.resource.data.originalFoodId != null &&
                     request.resource.data.reason != null;
      
      // Permite leitura de solicitações para usuários autenticados
      // Clientes podem ler suas próprias solicitações (via query com clientId)
      // Nutricionistas podem ler solicitações que pertencem a eles (via query com nutritionistId)
      allow read: if request.auth != null || resource != null;
      
      // Permite que nutricionistas atualizem solicitações que pertencem a eles
      allow update: if request.auth != null && 
                     resource != null && 
                     resource.data.nutritionistId == request.auth.uid;
      
      // Permite que nutricionistas deletem solicitações que pertencem a eles
      allow delete: if request.auth != null && 
                     resource != null && 
                     resource.data.nutritionistId == request.auth.uid;
    }
    
    // Regra padrão: nega acesso a todas as outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

